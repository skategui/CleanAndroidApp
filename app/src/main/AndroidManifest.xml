<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="agis.guillaume.cleancode">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:name=".MyApplication"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidCleanCode"
        tools:targetApi="31">
        <activity
            android:name=".ui.select.SelectOptionActivity"
            android:screenOrientation="portrait"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AndroidCleanCode.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.post.PostListActivity"
            android:theme="@style/Theme.AndroidCleanCode.NoActionBar"
            android:screenOrientation="portrait"
        />
        <activity android:name=".ui.article.ArticlesListActivity"

            android:theme="@style/Theme.AndroidCleanCode.NoActionBar"
        android:screenOrientation="portrait"
        />
    </application>

</manifest>